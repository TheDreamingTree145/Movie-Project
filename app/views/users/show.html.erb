<% if current_user == @user %>
  <h1>Welcome, <%= @user.email %></h1>
<% else %>
  <h1> <%= @user.email %>'s Movies!</h1>
<% end %>

<%= link_to "Add New Movie", new_movie_path %>
<h2>Movies You Have Added</h2>
<ul>
  <% @user.movies.each do |movie| %>
    <h3>Title: <%= link_to movie.title, movie %></h3>
    <h4>Starring:</h4>
    <% movie.characters.each do |character| %>
      <li>Character: <%= link_to character.name, character %>, Played By: <%= link_to character.actor.name, character.actor %></li>
     <% end %>
  <% end %>
</ul>
