    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <h4><%= link_to "Sign Out", destroy_user_session_path, method: :delete  %></h4>
    <% else %>
      <h4><%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %></h3>
    <% end %>
    <%= yield %>
  </body>
</html>
